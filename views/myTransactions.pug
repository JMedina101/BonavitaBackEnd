doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;500;700;800&display=swap' rel='stylesheet')
  link(rel='preconnect' href='https://fonts.gstatic.com')
  link(rel='stylesheet' href='css/client/userTransactions.css')
  link(rel='stylesheet' href='css/client/utlities.css')
  title Document
  script(src='JS/index.js' async='')
  script(src="JS/menu.js" async='')
// ? navigation
header.header
  .container
    .navbar
      .logo
        a(href='/')
          img.img-logo(src=`img/${profile.logo}` width='200px')
      .socials
        ul
          li
            a(href=`${profile.lazadaUrl}`)
              img.social(src='img/lazada-logo.png' height='40px')
          li
            a(href=`${profile.facebookUrl}`)
              img.social(src='img/facebook-logo.png' height='40px')
      nav
        ul#lists
          li
            a(href='/#products') Products
          li
            a(href='/testimonials') Testimonials
          li 
            a(href="/faq") Faq
          li 
            a(href='/userProfile') My Profile
          li
            a(href='/logout') Logout
            
      img#menuIcon.menu(src='img/menu-bar.png' onclick='openmenu()')
section.my-account-container
  .my-account-header-container
    h1 My Account
  .my-account-navigation-container
    a.profile(href='/userProfile') Profile
    a.profile(href='/myAddress') My Address
    a.profile.active(href='/myTransactions') Orders
  table.transaction-table
   
    tr
      th Order ID
      th Name 
      th Date of Purchase
      th Purchased
      th Total
      th Status
    each transaction in myTransactions
      tr 
        td= transaction.id
        td= transaction.name 
        td= transaction.date
        //- td
        //-   - for (var i = 0; i < transaction.products.length; i++) {
        //-       #{transaction.products[i].itemBought} #{transaction.products[i].productName}               ,
        //-   -}
        td
          each product in transaction.products
            span #{product.productName} X #{product.itemBought}
            br
            br
            
        td= transaction.subTotal
        if transaction.status == false 
          td Pending
        else 
          td Processed
         
footer.footer
  .footer-container
    .footer-fill
      .footer-brand
         ul.brand
          h3=  profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
            if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
            if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='aboutus.html') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='faq.html') FAQ
  .company
    p &copy; 2021 #{profile.companyName}. All rights reserved.
