doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='css/client/utlities.css')
  link(rel="stylesheet", href="css/client/index.css")
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;500;700;800&display=swap' rel='stylesheet')
  script(src='JS/index.js' async='')
  script(src="JS/menu.js" async='')

header.header
  .container
    .navbar
      .logo
        a(href='/')
          img.img-logo(src=`img/${profile.logo}` width='180px')
      .socials
        ul
          li
            a(href=`${profile.lazadaUrl}`)
              img.social(src='img/lazada-logo.png' height='40px')
          li
            a(href=`${profile.facebookUrl}`)
              img.social(src='img/facebook-logo.png' height='40px')
      nav
        ul#lists
          li
            a(href='/#products') Products
          li
            a(href='/testimonials') Testimonials

          if user
            li 
              a(href="/faq") Faq
            li 
              a(href='/userProfile') My Profile
            li
              a(href='/logout') Logout
          else
            li
                a(href='/login') Login
            li
                a(href='/signUp') Sign Up
      img#menuIcon.menu(src='img/menu-bar.png')
.banner
  img(src=`img/${profile.banner}` alt='banner')
section.products
  .floating-cart
    a(href='/cart' onclick='increaseNumber()')
      i.fa.fa-shopping-cart
    span.number 0
  .header_container
    a#products
    h2 Products
  .products-wrapper
    each Product in Products
      if Product.ProductStock > 0
        .products-container
          .product-descrip
            img.shop-item-image(src=`img/${Product.ProductImage}`, alt=`${Product.ProductImage}`)
            h3.shop-item-title= Product.ProductName 
            span.currency â‚±
            span.shop-item-price  #{Product.ProductPrice}
            p
              em Description:
            p
              = Product.ProductDescription
            br
            form.form(action="/checkout" method="GET") 
              button.add-cart.cart1(type='button') Add to cart

footer.footer
  .footer-container
    .footer-fill
      .footer-brand
        ul.brand
          h3=  profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
          br
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
             if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
             if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='') FAQ
  .company
    p &copy; 2021 #{profile.companyName}. All rights reserved.
