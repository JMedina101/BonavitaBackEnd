  title Document
section
  header.header
    .container
      .navbar
        .logo
          a(href='/welcome')
            img.img-logo(src='img/bonavita-logo.png' width='180px')
        nav
          ul#lists
            if user.role == 'master'
              li
                a(href='/welcome') Welcome
              li
                a(href='/adminProducts') Product
              li
                a(href='/adminShipping') Shipping
              li
                a(href='/acceptOrder') Pending
              li
                a(href='/transactionRecords') Transaction Records
              li
                a(href='/adminFaq') FAQ
              li
                a(href='/adminTestimonials') Testimonials
              li
                a(href='/adminRoles') Assign Admin Role
              li
                a(href='/adminCompanyProfile') Company Info
              li 
                a(href='/adminProfile') My Profile
              li 
                a(href='/adminLogout') Logout
            if user.role == 'encoder'
              li
                a(href='/welcome') Welcome
              li
                a(href='/adminShipping') Shipping
              li
                a(href='/acceptOrder') Pending
              li
                a(href='/transactionRecords') Transaction Records
              li
                a(href='/adminFaq') FAQ
              li
                a(href='/adminProfile') My Profile
              li
                a(href='/adminLogout') Testimonials
            if user.role == 'editor'
              li
                a(href='/welcome') Welcome
              li
                a(href='/adminFaq') Faq
              li
                a(href='/adminTestimonials') Testimonials
              li
                a(href='/adminCompanyProfile') Company Info
              li
                a(href='/adminProfile') My Profile
              li
                a(href='/adminLogout') logout
        img#menuIcon.menu(src='img/menu-bar.png' onclick='openmenu()')
  .content-container
    .content-heading
      h1 Add Products
  form(action='postProduct' method='POST' enctype="multipart/form-data")
    .productName
      label(for='message') Product Name
      br
      input(type='text' placeholder='Input Product Name here...' required=''  name='ProductName')
    .productPrice
      label(for='message') Product Price
      br
      input(type='number' step="0.01"  placeholder='Input Product Price here...' required='' name='ProductPrice' )
    .productDescription
      label(for='message') Product Description
      br
      textarea#productDescription(name='ProductDescription' placeholder='Input Product Description here...' required='')
    .productQuantity
      label(for='message') Product Quantity
      br
      input(type='number' placeholder='Input Product Quantity here...' required='' name='ProductStock')
    .uploadImg
      input(type="file" name="product")
    button(type='submit' name='button') Add Product
