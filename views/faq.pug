doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // ? google font:lato light
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;500;700;800&display=swap' rel='stylesheet')
  link(rel='preconnect' href='https://fonts.gstatic.com')
  // ? faq css
  link(rel='stylesheet' href='css/client/faq.css')
  // ? utility css
  link(rel='stylesheet' href='css/client/utlities.css')
  title Document
  script(src='JS/index.js' async='')
  script(src="JS/menu.js" async='')
header.header
  .container
    .navbar
      .logo
        a(href='/')
          img.img-logo(src=`img/${profile.logo}` width='200px')
      .socials
        ul
          li
            a(href=`${profile.lazadaUrl}`)
              img.social(src='img/lazada-logo.png' height='40px')
          li
            a(href=`${profile.facebookUrl}`)
              img.social(src='img/facebook-logo.png' height='40px')
      nav
        ul#lists
          li
            a(href='/#products') Products
          li
            a(href='/testimonials') Testimonials
          if user
            li 
              a(href="/faq") Faq
            li 
              a(href='/userProfile') My Profile
            li
              a(href='/logout') Logout
          else
            li
                a(href='/login') Login
            li
                a(href='/signUp') Sign Up
      img#menuIcon.menu(src='img/menu-bar.png' onclick='openmenu()')
  .faq-header__container
    h1 Frequently Asked Questions
  .faq-queston__container
    ul.questions
      each category in categories
        li.question
          a(href=`/faq?category=${category.FaqCategory}`)=category.FaqCategory
  .question-content__container
    if faqContent
      each content in faqContent
        .question__container
          h1= content.contentHeading
          p= content.contentBody
            
footer.footer
  .footer-container
    .footer-fill
      .footer-brand
        ul.brand
          h3= profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
          br
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
             if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
             if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='') FAQ
  .company
    p &copy; 2021 Bonavita #{profile.companyName}. All rights reserved.
