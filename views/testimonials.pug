  title Document
header.header
  .container
    .navbar
      .logo
        a(href='/')
          img.img-logo(src=`img/${profile.logo}` width='180px')
      .socials
        ul
          li
            a(href='https://www.lazada.com.ph/shop/bonavita-philippines/')
              img.social(src='img/lazada-logo.png' height='50px')
          li
            a(href='https://www.facebook.com/bonavitaphilippines2016')
              img.social(src='img/facebook-logo.png' height='50px')
      nav
        ul#lists
          li
            a(href='/#products') Products
          li
            a(href='/testimonials') Testimonials
          li 
            a(href="/faq") Faq
          li 
            a(href='/userProfile') My Profile
          li
            a(href='/logout') Logout
      img#menuIcon.menu(src='img/menu-bar.png')
.gallery-container
  .slides-vid
    .video-container
      iframe(width='560' height='315' src='https://www.youtube.com/embed/VGwi3u2bMfM' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
  .slides-vid
    .video-container
      iframe(width='560' height='315' src='https://www.youtube.com/embed/IKd3Egamhng' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
  .slides-vid
    .video-container
      iframe(width='560' height='315' src='https://www.youtube.com/embed/ctxUkwdkIzo' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
  a.prev(onclick='plusSlidesVid(-1)') &#x276E;
  a.next(onclick='plusSlidesVid(1)') &#x276F;
  br
  div(style='text-align: center;')
    span.dot(onclick='currentSlideVid(1)')
    span.dot(onclick='currentSlideVid(2)')
    span.dot(onclick='currentSlideVid(3)')
.testimonials-wrapper
  .testimonials-header
    h1 Testimonials
  if testimonials
    each testimonial in testimonials
      #testimonial-wrap.testimonial-wrap
        .testimonial-author
          h3= testimonial.Author
        .testimonial-title
          b
            i
              i.fa.fa-quote-left
              | #{testimonial.testimonialHeading}
              i.fa.fa-quote-right
        .line
        .testimonial-detail
          | #{testimonial.testimonialBody}
.floating-cart
  a(href='/cart' onclick='increaseNumber()')
    i.fa.fa-shopping-cart
  span.number 0
// ? Component for what type of sorting/selection the user wants to see
// ? footer
footer.footer
  .footer-container
    .footer-fill
      .footer-brand
        ul.brand
          h3=  profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
          br
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
             if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
             if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='') FAQ
  .company
    p &copy; 2021 #{profile.companyName}. All rights reserved.
