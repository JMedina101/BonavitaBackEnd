doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/client/cart.css')
  link(rel='stylesheet' href='css/client/utlities.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;500;700;800&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='css/client/error.css')
  script(src='js/index.js' async='')
  script(src='js/error.js' async='')
  script(src='js/menu.js' async='')
header.header
  .container
    .navbar
      .logo
        a(href='/')
          img.img-logo(src=`img/${profile.logo}` width='200px')
      .socials
        ul
          li
            a(href=`${profile.lazadaUrl}`)
              img.social(src='img/lazada-logo.png' height='40px')
          li
            a(href=`${profile.facebookUrl}`)
              img.social(src='img/facebook-logo.png' height='40px')
      nav
        ul#lists
          li
            a(href='/#products') Products
          li
            a(href='/testimonials') Testimonials
          li 
            a(href="/faq") Faq

          li 
            a(href='/userProfile') My Profile

          if user
            li
              a(href='/logout') Logout
          else 
            li
              a(href='/login') login
            li
              a(href='/signUp') Sign Up
      img#menuIcon.menu(src='img/menu-bar.png' onclick='openmenu()')
if error
  #confirm
    #message Error: #{error}
    button#yes OK
h2 Cart
.cart-container
  .product-header
    h3.product-title  Item 
    h3.price  Price 
    h3.quantity  Quantity 
    h3.total  Total 
    h3.removeItem
  .products-in-cart
    form.formCart(action="/checkout" method="POST")
      .cart-summary
      .summation
        .summary-item
          label  Original Price
          .summary-item-value.org-price
        .summary-item
          label
            h3 Subtotal 
          .summary-item-value
              h3
        button#proceedToCheckout(type='submit' ) Proceed to checkout
    br
.floating-cart
  a(href='cart.html' onclick='increaseNumber()')
    i.fa.fa-shopping-cart
  span.number 0
.cart-summary
footer.footer
  .footer-container
    .footer-fill
      .footer-brand
         ul.brand
          h3=  profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
            if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
            if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='aboutus.html') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='faq.html') FAQ
  .company
    p &copy; 2021 #{profile.companyName}. All rights reserved.
