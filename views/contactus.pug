doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/client/contactus.css')
  link(rel='stylesheet' href='css/client/utlities.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;500;700;800&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
 
  script(src='js/index.js' async='')

header.header
  .container
    .navbar
      .logo
        a(href='index.html')
          img.img-logo(src='img/bonavita-logo.png' width='60px')
      .logo
        a(href='index.html')
          img.img-word(src='img/bonavita-logo2.png' width='180px')
      .socials
        ul
          li
            a(href=`${profile.lazadaUrl}`)
              img.social(src='img/lazada-logo.png' height='40px')
          li
            a(href=`${profile.facebookUrl}`)
              img.social(src='img/facebook-logo.png' height='40px')
      nav
        ul#lists
          li
            a(href='contactus') Contact
          li
            a(href='/aboutUs') About Us
          li
            a(href='/#products') Products
          li
            a(href='/feedback') Feedback
          li
            a(href='/faq') FAQ
          li 
            a(href='/userProfile') My Profile
          li
            a(href='/logout') Logout
      img.menu(src='img/menu-bar.png' onclick='openmenu()')
section.contact-container
  .floating-cart
    a(href='cart.html')
      i.fa.fa-shopping-cart
  p#formtitle  Contact Us 
  form
    label(for='name') Full Name: 
    br
    input#name(name='name' type='text' required='')
    br
    label(for='email') Email Address: 
    br
    input#email(name='password' type='email' required='')
    br
    label(for='message') Message: 
    br
    textarea#message(name='message')
    button(type='submit') Submit
    br
footer.footer
  .footer-container
    .footer-fill
      .footer-brand
        ul.brand
          h3=  profile.companyName
          if profile.CpNum
            p Cellphone Number: #{profile.CpNum} 
          br
          if profile.TelNum
            p telephone Number: #{profile.TelNum}
          br
          p= profile.Address
      .footer-social-links
        ul.social-links
          li
            h3 Follow Us:
          li
            if profile.facebookUrl
              a(href=`${profile.facebookUrl}`) Facebook
          li
            if profile.twiterUrl
              a(href=`${profile.twiterUrl}`) Twitter
          li
            if profile.instagramUrl
              a(href=`${profile.instagramUrl}`) Instagram
      .footer-contact-info
        ul.contact-info
          li
            a(href='') About Us
          li
            a(href='') Terms and Conditions
          li
            a(href='') Privacy Policy
          li
            a(href='') FAQ
  .company
    p &copy; 2021 #{profile.companyName}. All rights reserved.
